@model WebApplication2Crud.Models.Credential

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>SignUp</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>






    @using (Html.BeginForm())
    {

        @ViewBag.message

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-horizontal">
            <h4>Enter details and SignUp</h4>
            <hr />



            <table>



                <tr>
                    <td>
                        @Html.LabelFor(model => model.UserName, htmlAttributes: new { @class = "control-label col-md-2" })
                    </td>
                    <td>
                        @Html.TextBoxFor(model => model.UserName, new { htmlAttributes = new { @class = "form-control" } })
                    </td>
                </tr>
            </table>
            <div class="form-group">

                <div class="col-md-10">


                </div>
            </div>
            <br />
            <div class="form-outline mb-4">
                <table>
                    <tr>
                        <td>
                            @Html.LabelFor(model => model.EmailId, htmlAttributes: new { @class = "control-label col-md-2" })
                        </td>
                        <td>
                            @Html.TextBoxFor(model => model.EmailId, new { htmlAttributes = new { @class = "form-control" } })
                        </td>
                    </tr>
                </table>
                <div class="col-md-10">


                </div>
            </div>
            <br />
            <div class="form-group">
                <table>
                    <tr>
                        <td>
                            @Html.LabelFor(model => model.Password, htmlAttributes: new { @class = "control-label col-md-2" })
                        </td>
                        <td>
                            @Html.PasswordFor(model => model.Password, new { htmlAttributes = new { @class = "form-control" } })
                        </td>
                    </tr>
                </table>
                <div class="col-md-10">


                </div>
            </div>
            <br />
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="SignUp" class="btn btn-success" />      <button type="button" class="btn btn-primary" onclick="window.location= '@Url.Action("Login", "Credential")'">Click Here to login </button>
                </div>
            </div>
        </div>
    }

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")

</body>
</html>




